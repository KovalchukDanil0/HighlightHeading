{
  "manifest_version": 3,
  "name": "Highlight Heading",
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-64.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.bundle.js"]
    }
  ],
  "permissions": ["storage"]
}
